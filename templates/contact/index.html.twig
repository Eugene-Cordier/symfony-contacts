{% extends 'base.html.twig' %}


        {% block title %}
            Liste des contacts
        {% endblock %}
    {% block body %}
        <h1>Liste des contacts</h1>
        <ul>
        {% for contact in contacts %}
           <li> <a href="{{ path('app_contact/show',{id: contact.id}) }}"><span><span class="lastname">{{ contact.lastName }}</span>, <span class="firstname">{{ contact.firstname }}</span></span></a></li>
        {% endfor %}
        </ul>
    {% endblock %}

