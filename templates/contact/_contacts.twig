{% block body %}
    <h1>Liste des contacts</h1>
    <ul>
        {% for contact in contacts %}
            <li>
                <a href="{{ path('app_contact/show',{id: contact.id}) }}">
                    <span><span class="lastname">{{ contact.lastName }}</span>, <span class="firstname">{{ contact.firstname }}</span></span>
                </a>
                {% if (contact.category is not null) %}
                <a href="{{ path('app_category_show',{'id' : contact.category.id}) }}">
                   <span class="badge bg-secondary">{{ contact.category.name }}</span>
                </a>
                {% else %}
                    <span class="badge bg-secondary">aucune cat√©gorie</span>
                {% endif %}

            </li>
        {% endfor %}
    </ul>
{% endblock %}
